  .box {
    width: 300px;
    height: 300px;
    margin: 20px;
    perspective: 1000px;
    position: relative;
  }

  .box .flip-box {
    width: 100%;
    height: 200px;
    position: absolute;
    transform-style: preserve-3d;
    transition: transform 0.5s;
  }

  .box .flip-box .front,
  .box .flip-box .back {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
  }

  .box .flip-box .front {
    background-color: #fff;
    padding: 20px;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    border-radius: 5px;
    z-index: 2;
  }

  .box .flip-box .back {
    transform: rotateY(180deg);
    background-color: #f1c40f;
    padding: 20px;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    border-radius: 5px;
  }

  .box:hover .flip-box {
    transform: rotateY(180deg);
  }

  .box h2 {
    margin-top: 0;
  }

  .box p {
    margin: 10px 0;
  }
</style>

